            <span onclick="log()">Login</span>
            <span onclick="sign()">Register</span>
            <hr id="line">

    <form id="logform" action="/api/v1/user/login" method="post">
          
        <input type="text" placeholder="Name" name="Name">
        <input type="text" placeholder="Password" name="setPassword">
        <center><button type="submit" class="log" >Login</button></center> 
        <center><a href="">Forget Password</a></center>
    </form>    
           
    <form id="signform" action="/api/v1/user/signUP" method="post">
            
          <input type="text" placeholder="Name" name="Name">
          <input type="text" placeholder="Email" name="email">
          <input type="text" placeholder="Number" name="mobileNumber">
          <input type="text" placeholder="Password" name="setPassword">
          <center><button type="submit" class="log">SignUp</button></center>
          <center><p class="message">Already Registered? <a href="#">Login</a></center>
          </p>     

        </div>
      </div>
        </div>
      </div>
        </div>
      </div> 
    </form>
    
   <script>
       var login = document.getElementById("logform");
       var signin = document.getElementById("signform");
       var line = document.getElementById("line");

       function sign(){
            signin.style.transform = "translateX(0px)"
            login.style.transform = "translateX(0px)"
            line.style.transform = "translateX(100px)"

       }

       function log(){
            signin.style.transform = "translateX(300px)"
            login.style.transform = "translateX(350px)"
            line.style.transform = "translateX(-40px)"
       }
       
  
       

   </script> 
