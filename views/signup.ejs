.forms{
    background: rgba(0,0,0,0.6);
    width: 300px;
    height: 400px;
    position: relative;
    margin: auto;
    padding: 20px;
    align-content: center;
    box-shadow:  0 0 20px 0px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.forms span{
    font-weight: bold;
    padding-left: 50px;
    color: whitesmoke;
    cursor: pointer;
    width: 70px;
    display: inline-block;

}


.forms2{
    display: inline-block;
     
}

.forms form{
    max-width: 250px;
    padding: 0 50px;
    position: absolute;
    top: 80px;
    transition: transform 1s;
}



form input{
    width: 90%;
    height: 35px;
    margin: 10px 0; 
    padding: 0 10px;
    border: 1px solid black;
    border-radius: 25px;

}

form .log{
    padding: 10px;
    width: 50%;
    border: none;
    cursor: pointer;
    margin: 10px 0;
    background-color: orange;
    border-radius: 20px;
    
}

form .log:focus{
    outline: none;
}

#logform{
    left: -350px;
}

#signform{
    left: 5px;
}

form a{
    font-size: 15px;
    font-weight: bold;
    color: chocolate;

}

form .message{
    color: coral;
   
}

#line{
    max-width: 100px;
    border: none;
    background: orangered;
    height: 3px;
    margin-top: 8px;
    transform: translateX(100px);
    transition: transform 1s;
}



